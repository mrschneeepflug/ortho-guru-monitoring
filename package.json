{
  "name": "ortho-guru-monitoring",
  "version": "0.1.0",
  "private": true,
  "description": "OrthoMonitor - Remote Orthodontic Monitoring Platform",
  "scripts": {
    "dev": "pnpm --parallel --filter api --filter web dev",
    "dev:api": "pnpm --filter api dev",
    "dev:web": "pnpm --filter web dev",
    "build": "pnpm --filter shared build && pnpm --parallel --filter api --filter web build",
    "build:api": "pnpm --filter api build",
    "build:web": "pnpm --filter web build",
    "db:generate": "pnpm --filter api exec prisma generate",
    "db:migrate": "pnpm --filter api exec prisma migrate dev",
    "db:seed": "pnpm --filter api exec prisma db seed",
    "db:studio": "pnpm --filter api exec prisma studio",
    "lint": "pnpm --parallel -r lint",
    "test": "pnpm --parallel -r test",
    "test:api": "pnpm --filter api test",
    "test:web": "pnpm --filter web test",
    "test:shared": "pnpm --filter shared test",
    "test:coverage": "pnpm --parallel -r test:coverage",
    "clean": "pnpm --parallel -r clean"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
